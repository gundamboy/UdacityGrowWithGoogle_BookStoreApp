<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InventoryListTitles" parent="AppTheme">
        <item name="android:textColor">@color/comic_byline_text_color</item>
        <item name="android:textSize">@dimen/comic_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InventoryListByline" parent="AppTheme">
        <item name="android:textColor">@color/comic_byline_text_color</item>
        <item name="android:textSize">@dimen/comic_byline_text</item>
    </style>

    <style name="SellButton_Round" parent="AppTheme">
        <item name="android:textColor">@color/sell_button_text_color</item>
        <item name="android:background">@drawable/round_button_sell</item>
        <item name="android:textSize">@dimen/sell_button_text</item>
        <item name="android:layout_marginEnd">@dimen/margins_eight</item>
        <item name="android:layout_marginBottom">@dimen/margins_eight</item>
        <item name="android:layout_width">@dimen/sell_button_width_height</item>
        <item name="android:layout_height">@dimen/sell_button_width_height</item>
    </style>

    <style name="SellButton" parent="AppTheme">
        <item name="android:textSize">@dimen/sell_button_text</item>
        <item name="android:layout_marginEnd">@dimen/margins_eight</item>
        <item name="android:layout_width">@dimen/sell_button_width</item>
        <item name="android:layout_height">@dimen/sell_button_height</item>
    </style>

</resources>
